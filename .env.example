# ================================================
# ENVIRONMENT VARIABLES
# ================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git!
# ================================================

# Required: Gemini API Key
GOOGLE_API_KEY=your_gemini_api_key_here

# Optional: Google Maps API Key (for places, routes)
GOOGLE_MAPS_API_KEY=your_maps_api_key_here


# Server config
PORT=8080
HOST=0.0.0.0
ENVIRONMENT=development

# CORS: Comma-separated allowed origins
# For development: *
# For production: https://your-frontend.com
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Firebase Authentication
# Path to your Firebase service account JSON file
FIREBASE_SERVICE_ACCOUNT_KEY=/absolute/path/to/firebase-service-account.json

# Redis (Optional - enables persistent state storage)
# If not set, falls back to in-memory storage
REDIS_URL=redis://localhost:6379/0
